{
  "name": "@synthetixio/synpress",
  "version": "4.0.0-alpha.4",
  "type": "module",
  "exports": {
    "types": "./types/index.d.ts",
    "default": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./types/index.d.ts",
  "bin": "./dist/cli.js",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:dist && pnpm run build:types",
    "build:dist": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf dist types",
    "lint": "biome check . --apply",
    "lint:check": "biome check . --verbose",
    "lint:unsafe": "biome check . --apply-unsafe",
    "prepublishOnly": "pnpm run build",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@synthetixio/synpress-core": "1.0.0-alpha.4",
    "@synthetixio/synpress-fixtures": "1.0.0-alpha.4",
    "@synthetixio/synpress-metamask": "1.0.0-alpha.4",
    "@synthetixio/synpress-metamask-mock": "1.0.0-alpha.4"
  },
  "devDependencies": {
    "@synthetixio/synpress-tsconfig": "1.0.0-alpha.4",
    "@types/node": "20.11.17",
    "rimraf": "5.0.5",
    "tsup": "8.0.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "@playwright/test": "1.41.2"
  }
}
